---
import Layout from '../layouts/Layout.astro';
import { getEntry } from 'astro:content';

const about = await getEntry('pages', 'about');
if (!about) throw new Error('About page not found');
const { Content } = await about.render();
---

<Layout title={about.data.title}>
  <div class="max-w-4xl mx-auto">
    <div class="text-center mb-12">
      <h1 class="text-5xl lg:text-6xl font-bold mb-4 bg-gradient-to-r from-gray-900 via-blue-800 to-purple-800 bg-clip-text text-transparent">
        {about.data.title}
      </h1>
      {about.data.description && (
        <p class="text-xl text-gray-600">{about.data.description}</p>
      )}
    </div>

    <div class="prose prose-lg max-w-none">
      <div class="bg-white rounded-2xl p-8 lg:p-12 shadow-lg border border-gray-100">
        <Content />
      </div>
    </div>
  </div>
</Layout>
